{% extends 'base.html.twig' %}

{% block title %}Registrarse{% endblock %}

{% block body %}
   
<div class="container">
    <div class="row justify-content-center mt-5">
        
        <div class="col-6 mt-5">
            <h1 class="text-center font-weight-bold">Crear cuenta</h1>
            {{ form_start(registrationForm) }}
            <div class="form-group">
                {{form_widget(registrationForm.nombre)}}
            </div>
            <div class="form-group">
                {{form_widget(registrationForm.email)}}
            </div>
            <div class="form-group">
                {{form_widget(registrationForm.plainPassword)}}
            </div>
            <div class="form-group">
                <label class="mr-1">Aceptar términos</label>
                {{form_widget(registrationForm.agreeTerms)}}
            </div>
            <div class="form-group">
                {{form_row(registrationForm.submit)}}
            </div>
            {{ form_end(registrationForm) }}
        <p>¿Ya tiene cuenta? <a href="{{path('app_login')}}">Iniciar sesión</a></p>
    </div>
            
    </div>
</div>
           

{% endblock %}
